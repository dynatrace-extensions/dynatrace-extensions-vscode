{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "@common": ["./common"]
    }
  },
  "include": ["src/**/*.ts", "common/**/*.ts", "test/**/*.ts"]
}
