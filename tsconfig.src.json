{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "noImplicitReturns": false,
    "paths": {
      "@common": ["./common"]
    }
  },
  "include": ["src/**/*.ts", "common/**/*.ts"]
}
